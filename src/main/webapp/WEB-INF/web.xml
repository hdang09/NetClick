<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>PreviewController</servlet-name>
        <servlet-class>controllers.PreviewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ForgotPsss</servlet-name>
        <jsp-file>/forgot-pass.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>SubscriptionController</servlet-name>
        <servlet-class>controllers.SubscriptionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubscriptionPlanController</servlet-name>
        <servlet-class>controllers.SubscriptionPlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TagsController</servlet-name>
        <servlet-class>controllers.TagsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>controllers.MovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewMoviesController</servlet-name>
        <servlet-class>controllers.NewMoviesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>momop</servlet-name>
        <jsp-file>/momop.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>visap</servlet-name>
        <jsp-file>/visap.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>controllers.PaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controllers.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PreviewController</servlet-name>
        <url-pattern>/preview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubscriptionController</servlet-name>
        <url-pattern>/subscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubscriptionPlanController</servlet-name>
        <url-pattern>/subscription-plan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TagsController</servlet-name>
        <url-pattern>/tags</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewMoviesController</servlet-name>
        <url-pattern>/new-movies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>momop</servlet-name>
        <url-pattern>/momo</url-pattern>
    </servlet-mapping>
